<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable
                name="temp"
                type="com.androsgames.foodrecipes.RecipeActivity" />
    </data>

<ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent"
        android:visibility="gone">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/recipe_image_height"
                android:id="@+id/recipe_image"
                android:scaleType="centerCrop" />

        <ImageView
                android:id="@+id/bookmark_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_emptystar"
                android:padding="7dp"
                android:background="#FFFF4081"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recipe_title_text_size"
                android:textColor="#000"
                android:id="@+id/recipe_title"
                android:padding="7dp"
                android:layout_below="@+id/recipe_image"
                android:text="Some Recipe title"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_below="@+id/recipe_title"
                android:id="@+id/container"
                android:padding="10dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:textSize="@dimen/recipe_publisher_text_size"
                    android:textStyle="bold"
                    android:layout_below="@+id/recipe_title"
                    android:id="@+id/ingredients_title"
                    android:text="Ingredients"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:textSize="@dimen/recipe_publisher_text_size"
                    android:textColor="@color/red"
                    android:id="@+id/recipe_social_score"
                    android:gravity="center"
                    android:text="100"/>


        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_below="@+id/container"
                android:id="@+id/ingredients_container">
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredients_container"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/recipe_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="publisher"
                    android:textColor="#000"
                    android:textSize="@dimen/recipe_publisher_text_size" />

            <TextView
                    android:id="@+id/recipe_source_intent_bn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/read_full_recipe_from_source"
                    android:textColor="@color/red"
                    android:textSize="@dimen/recipe_publisher_text_size" />
        </LinearLayout>



    </RelativeLayout>

</ScrollView>

</layout>